<h1><%= "#{@room.user.name}'s #{@room.description}"%></h1>
<div>
<h2>Dimensions</h2>
  <ul>
    <li><%= "Width: #{@room.width}" %></li>
    <li><%= "Length: #{@room.depth}" %></li>
  </ul>
</div>
<div>
  <h2>Furniture</h2>
  <table>
    <thead>
      <td>
        Item name
      </td>
      <td>
        Purchased?
      </td>
    </thead>
    <tbody>
      <% @room.furniture_pieces.each do |piece| %>
        <tr>
          <td>
            <%= link_to piece.furniture.description, furniture_path(piece.furniture) %>
          </td>
          <td>
            <%= human_boolean(piece.purchased) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Create new room", new_user_room_path(@room.user) if current_user == @room.user %>