<h1>Edit your user information</h1><br>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
    
  </div>
    <%= f.label :designer, "Designer?" %><br>
    <%= f.label :designer, "Yes" %>
    <%= f.radio_button :designer, "true".to_bool %>
    <%= f.label :designer, "No" %>
    <%= f.radio_button :designer, 'false'.to_bool %>
  <div>

  <div>
    <%= f.submit %>
  </div>
    
  </div>
<% end %>